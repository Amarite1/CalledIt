<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.t3kbau5.calledit.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve a Room"
        android:id="@+id/button_reserve"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_roundbutton_purple"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:padding="3dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Rooms"
        android:id="@+id/button_rooms"
        android:layout_below="@+id/button_reserve"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_roundbutton_purple"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:padding="3dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Open Rooms"
        android:id="@+id/button_open"
        android:background="@drawable/background_roundbutton_purple"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:padding="3dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/button_rooms"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reservationsTitle"
        android:layout_below="@+id/button_open"
        android:gravity="center"
        android:text="Your Reservations"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:textAppearanceMedium"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reservationsList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reservationsTitle" />
</RelativeLayout>
